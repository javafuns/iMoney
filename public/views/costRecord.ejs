<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <script type="text/javascript" src="/../js/jquery-1.10.2.min.js"></script>
        <link rel="stylesheet" href="/../css/style.css">
    </head>
<body>
<div class="data-table">
    <table border="1" cellpadding="7" cellspacing="7">
        <tr>
            <th width="50px">No</th>
            <th>Date</th>
            <th>Type</th>
            <th>Cost</th>
            <th>Action</th>
        </tr>
                       
        <% if(data.length){ 
                        
         for(var i = 0;i < data.length;i++) { %>
         
        <tr>
            <td><%=(i+1)%></td>
            <td><%=data[i].date%></td>
            <td><%=data[i].type%></td>
            <td><%=data[i].cost%></td>
            <td>
                <a class="a-inside edit" href="/api/costRecord/<%=data[i].record_id%>">Edit</a>
               
                <a class="a-inside delete" href="javascript:void(0)" onClick="deleteRecord(<%=data[i].record_id%>)">Delete</a>
               
            </td>
        </tr>
    <% }
    
     }else{ %>
         <tr>
            <td colspan="5">No Data</td>
         </tr>
    <% } %>
                                      
    </table>
</div>
<div class="page-data">
    
    <form method="post" action="" id="the-form">
        <table cellpadding="11">
        <tr>
            <td class="label">Date</td><td>: <input type="date" name="date"></td>
         </tr>
        <tr>
            <td class="label">Type</td><td>: <select id="type" name="type">
                <option value="food">Food</option>
                <option value="clothes">Clothes</option>
                <option value="traffic">Traffic</option>
                <option value="entertainment">Entertainment</option>
                <option value="travel">Travel</option>
              </select></td>
         </tr>
          <tr>
            <td class="label">Cost</td><td>: <input type="number" name="cost" required="true"></td>
         </tr>
         <tr>
            <td class="label"></td>
            <td>
                &nbsp; <input type="button" value="Save" onClick="saveRecord()">
                <input type="reset">
            </td>
         </tr>
        </table>
    </form>
</div>
<div class="page-data">
     <ul class="err-area"></ul>
</div>

<script>

    function saveRecord(){
       
       $.ajax({
        
        url:"/api/costRecord",
        type:"post",
        data:$("#the-form").serialize(),
        success:function(res){
            
            window.location.reload();
            return false;
        },
        error:function(xhr, status, error){
            
            console.log(xhr.responseText);
            var err = '';
            $.each(JSON.parse(xhr.responseText) , function(i, item) {
               
                 err +='<li>'+item.msg+'</li>';
            });
            $(".err-area").html(err);    
            return false;
        }
        
       });
    }
    
    function deleteRecord(record_id){
    
        $.ajax({
            url:"/api/costRecord/"+record_id,
            type: 'DELETE',
            success: function(res) {
                
                window.location.reload();
                return false;
            },
            error:function(xhr, status, error){
            
                console.log(xhr.responseText);
                alert("Error deleting");
                return false;
            }
        });
    }

</script>
</body>
</html>
